<%= form_for(@speaker) do |f| %>
  <% if @speaker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@speaker.errors.count, "error") %> prohibited this speaker from being saved:</h2>

      <ul>
        <% @speaker.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, input_html: {class: 'form-control'} %>
  </div>

  <div class="form-inputs">
    <%= f.label :city %><br>
    <%= f.text_field :city_id, list: 'city', required: true %>
    <datalist id="city_id">
      <% City.all.each do |city| %>
        <option value="<%= city.name %>"></option>
      <% end %>
    </datalist>
  </div>


  <div class="form-inputs">
    <%= f.label :state %><br>
    <%= f.text_field :state, list: 'state' %>
    <datalist id="state">
      <% State.all.each do |state| %>
        <option value="<%= state.name %>"></option>
      <% end %>
    </datalist>
  </div>

  <div class="form-inputs">
    <%= f.label :country %><br>
    <%= f.text_field :country, list: 'country', required: true %>
    <datalist id="country">
      <% Country.all.each do |country| %>
        <option value="<%= country.name %>"></option>
      <% end %>
    </datalist>
  </div>

  <div class="form-inputs">
    <%= f.label :native_language %><br>
    <%= f.text_field :native_language, list: 'native_language', required: true %>
    <datalist id="native_language">
      <% NativeLanguage.all.each do |nl| %>
        <option value="<%= nl.name %>"></option>
      <% end %>
    </datalist>
  </div>

  <div class="form-inputs">
    <%= f.label '# Other Languages Known' %><br>
    <%= f.number_field :other_languages, required: true, input_html: {class: 'form-control'} %>
  </div>

  <div class="form-inputs">
    <%= f.label 'Age' %><br>
    <%= f.number_field :age, required: true, input_html: {class: 'form-control'} %>
  </div>

  <div class="form-inputs">
    <%= f.label :gender %> <br>
    <%= f.select :gender, options_for_select(Speaker.genders.keys.to_a), require: true, input_html: {class:
                                                                                                             "form-control"} %>
  </div>

  <div class="form-inputs">
    <%= f.label 'English Onset' %><br>
    <%= f.number_field :english_onset, required: true, input_html: {class: 'form-control'} %>
  </div>

  <div class="form-inputs">
    <%= f.label :learning_method %> <br>
    <%= f.select :learning_method, options_for_select(Speaker.learning_methods.keys.to_a), require: true, input_html:
                                                                                                    {class: "form-control"} %>
  </div>

  <div class="form-inputs">
    <%= f.label :english_country_residence %><br>
    <%= f.text_field :english_country_residence, list: 'english_country_residence' %>
    <datalist id="english_country_residence">
      <% EnglishCountryResidence.all.each do |ecr| %>
        <option value="<%= ecr.name %>"></option>
      <% end %>
    </datalist>
  </div>

  <div class="form-inputs">
    <%= f.label 'Length English Residence' %><br>
    <%= f.number_field :length_english_residence, required: true, input_html: {class: 'form-control'} %>
  </div>

  <div class="actions form-group">
    <%= f.submit %>
  </div>
  <!--TODO: Figure out how to make submit button look like this button:-->
  <!--<%= button_tag "Create Speaker", type: 'submit', class: "btn btn-success" %>-->
<% end %>
