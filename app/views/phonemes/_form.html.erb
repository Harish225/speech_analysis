<%= form_tag phonemes_path do %>

  <% text_array = split_text_on_space('app/assets/paragraph.txt') %>
  <% remove_punctuation(text_array) %>
<!--TODO: Implement speaker dropdown here-->
  <% @phoneme_array.each do |phoneme| %>
    <%= fields_for 'phonemes[]', phoneme do |p| %>

      <div class="field">
      <%= p.label :base %> <br>
      <%= p.text_field :base, required: true, input_html: {class: "form-control"} %> <br>
      </div>
      <div class="field">
      <%= p.label :actual %> <br>
      <%= p.text_field :actual, required: true, input_html: {class: "form-control"} %> <br>
      </div>
      <div class="field">
      <%= p.label :sequence %> <br>
      <%= p.text_field :sequence, required: true, input_html: {class: "form-control"} %> <br>
      </div>
    <% end %>
  <% end %>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
