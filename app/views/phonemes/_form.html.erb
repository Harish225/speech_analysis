<%= simple_form_for(@phoneme) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :base, required: true, input_html: {class: "form-control"} %>
    <%= f.input :actual, required: true, input_html: {class: "form-control"} %>
    <%= f.input :diacritic, required: true, input_html: {class: "form-control"} %>
    <%= f.input :sequence, required: true, input_html: {class: "form-control"} %>
    <%= f.association :speaker, required: true, input_html: {class: "form-control"} %>
  </div>

  <div class="actions form-group">
    <%= f.submit %>
  </div>
  <!--TODO: Figure out how to make submit button look like this button:-->
  <!--<%= button_tag "Create Phoneme", type: 'submit', class: "btn btn-success" %>-->
<% end %>
