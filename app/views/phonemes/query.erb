<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'View Phoneme Data', phonemes_path %></li>
  <li><%= link_to 'Enter Phoneme Data', new_phoneme_path %></li>
  <li><%= link_to 'View Speakers', speakers_path %></li>
  <li><%= link_to 'Create Speaker', new_speaker_path %></li>
  <li class="active"><%= link_to 'Query Data', phonemes_input_query_path %></li>
</ul>

<br><br>


<%= form_for phonemes_input_query_path, :html => {:class => 'form-horizontal'}, :method => 'get' do %>

    <div class="form-group">
      <label class="col-xs-2">Base:</label>
      <div class="col-xs-10"><%= text_field_tag :base, params[:base] %></div>
    </div>
    <div class="form-group">
      <label class="col-xs-2">Actual:</label>
      <div class="col-xs-10"><%= text_field_tag :actual, params[:actual] %></div>
    </div>
    <div class="form-group">
      <label class="col-xs-2">Diacritic:</label>
      <div class="col-xs-10">
      <%= text_field_tag :diacritic, params[:diacritic] %></div>
    </div>
    <div class="form-group">
      <label class="col-xs-2">Speaker ID:</label>
      <div class="col-xs-10">
      <%= text_field_tag :speaker, params[:speaker] %></div>
    </div>
    <div class="form-group">
      <label class="col-xs-2">Native Language:</label>
      <div class="col-xs-10">
      <%= text_field_tag :native_language, params[:native_language] %></div>
    </div>
      <p><div class="actions"><%= submit_tag "Search", :name => nil, class: "btn btn-primary" %></div></p>


<% end %>

<% if @results.present? %>
    <table class="table">
      <thead>
      <tr>
        <th>Base</th>
        <th>Actual</th>
        <th>Diacritic</th>
        <th>Speaker</th>
        <th>Native Language</th>
      </tr>
      </thead>

      <tbody>
      <% @results.each do |result| %>
          <tr>
            <td><%= result.BASE %></td>
            <td><%= result.ACTUAL %></td>
            <td><%= result.DIACRITIC %></td>
            <td><%= result.SPEAKER_ID %></td>
            <td><%= result.NATIVE_LANGUAGE %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>